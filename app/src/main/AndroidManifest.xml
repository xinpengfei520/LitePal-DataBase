<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xpf.dbhelper">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.xpf.dbhelper.activity.SaveActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xpf.dbhelper.activity.UpdateActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xpf.dbhelper.activity.DeleteActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xpf.dbhelper.activity.QueryActivity"
            android:screenOrientation="portrait" >
        </activity>

    </application>

</manifest>